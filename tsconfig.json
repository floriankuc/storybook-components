{
  "compilerOptions": {
    "rootDir": "src",
    "declaration": true,
    "module": "es6",
    "target": "es5",
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "composite": true,
    "strict": true,
    "strictFunctionTypes": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "build",
    "src/**/*.stories.tsx",
    "src/**/*.test.tsx"
  ]
}
